<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LogActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:weightSum="0.9">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:id="@+id/start_date_layout">

                        <TextView
                            android:id="@+id/txt_start_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="@string/start_date"
                            android:paddingLeft="5dp"/>
                        <Button
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_baseline_calendar_today_24"
                            android:layout_alignParentRight="true"
                            android:id="@+id/btn_start_date"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:id="@+id/end_date_layout">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/end_date"
                            android:paddingLeft="5dp"
                            android:id="@+id/txt_end_date"/>
                        <Button
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_baseline_calendar_today_24"
                            android:id="@+id/btn_end_date"
                            android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_gravity="center">
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:text="@string/apply"
                            android:gravity="center"
                            android:layout_margin="10dp"
                            android:textSize="12sp"
                            android:id="@+id/btn_filter_logs"
                            android:textAllCaps="false"/>
<!--                        android:background="@drawable/graph_selection_txt_bg"-->
                </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/logLinear_layout"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textSize="12sp"
                    android:fontFamily="@font/arial"
                    android:textColor="?android:textColorPrimary"
                    android:layout_weight="0.17"
                    android:gravity="center"
                    android:padding="5dp"/>
                <!--                    android:layout_marginRight="5dp"/>-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="@string/time"
                    android:fontFamily="@font/arial"
                    android:layout_weight="0.17"
                    android:textColor="?android:textColorPrimary"
                    android:gravity="center"
                    android:padding="5dp"/>
                <!--                    android:layout_marginRight="3dp"/>-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="@string/sys"
                    android:fontFamily="@font/arial"
                    android:layout_weight="0.17"
                    android:textColor="?android:textColorPrimary"
                    android:gravity="center"
                    android:padding="5dp"/>
                <!--                    android:layout_marginRight="3dp"/>-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dya"
                    android:textSize="12sp"
                    android:layout_weight="0.17"
                    android:textColor="?android:textColorPrimary"
                    android:gravity="center"
                    android:padding="5dp"/>
                <!--                    android:layout_marginRight="3dp"/>-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate"
                    android:textSize="12sp"
                    android:fontFamily="@font/arial"
                    android:layout_weight="0.17"
                    android:textColor="?android:textColorPrimary"
                    android:gravity="center"
                    android:padding="5dp"/>
                <!--                    android:layout_marginRight="3dp"/>-->

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:id="@+id/list_layout"
            android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/txt_no_data_found"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="@string/no_data_found"
                    android:visibility="invisible"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/log_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_transparent1">
                        <!--                #ECEFF1-->
                </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/log_bottomNavigationView"
            style="@style/Widget.MaterialComponents.BottomNavigationView.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            app:itemIconTint="@drawable/navigation_item_color"
            app:itemTextColor="@drawable/navigation_item_color"
            app:menu="@menu/bottom_nav_menu" />

</LinearLayout>