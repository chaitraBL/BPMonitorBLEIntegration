<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataTransferActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:id="@+id/txt_status"
        android:layout_margin="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/actual_status"
        android:layout_toEndOf="@+id/txt_status"
        android:layout_margin="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery"
        android:id="@+id/txt_battery"
        android:layout_toEndOf="@+id/actual_status"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="70dp"/>

    <TextView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/battery_level"
        android:layout_toEndOf="@+id/txt_battery"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="8dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_read"
        android:layout_margin="8dp"
        android:layout_below="@+id/txt_status"
        android:src="@drawable/ic_baseline_add_circle_24"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/final_val"
        android:layout_margin="8dp"
        android:layout_toRightOf="@+id/btn_read"
        android:layout_below="@id/txt_status"
        android:text="Read"/>

<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:id="@+id/receivedMsg"-->
<!--        android:layout_below="@+id/btn_read"-->
<!--        android:layout_margin="8dp"/>-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/systa"
        android:text="Systolic"
        android:layout_below="@+id/btn_read"
        android:layout_margin="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/systalic_val"
        android:layout_toRightOf="@+id/systa"
        android:layout_below="@+id/btn_read"
        android:layout_margin="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/diasta"
        android:text="Diastolic"
        android:layout_below="@+id/systa"
        android:layout_margin="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dystalic_val"
        android:layout_toRightOf="@+id/diasta"
        android:layout_below="@+id/systalic_val"
        android:layout_margin="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rate"
        android:text="Heart Rate"
        android:layout_below="@+id/diasta"
        android:layout_margin="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rate_val"
        android:layout_toRightOf="@+id/rate"
        android:layout_below="@+id/dystalic_val"
        android:layout_margin="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/range"
        android:text="MAP"
        android:layout_below="@+id/rate"
        android:layout_margin="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/range_val"
        android:layout_toRightOf="@+id/range"
        android:layout_below="@+id/rate_val"
        android:layout_margin="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_rv"
        android:text="Date"
        android:layout_below="@+id/range_val"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_rv"
        android:layout_toRightOf="@+id/date_rv"
        android:text="Time"
        android:layout_below="@+id/range_val"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/systa_rv"
        android:text="Systolic"
        android:layout_toRightOf="@id/time_rv"
        android:layout_below="@+id/range_val"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dysta_rv"
        android:text="Dystolic"
        android:layout_toRightOf="@+id/systa_rv"
        android:layout_below="@+id/range_val"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rate_rv"
        android:text="Heart Rate"
        android:layout_below="@+id/range_val"
        android:layout_toRightOf="@+id/dysta_rv"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/map_rv"
        android:text="MAP"
        android:layout_toRightOf="@+id/rate_rv"
        android:layout_below="@+id/range_val"
        android:layout_margin="5dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/map_rv"
        android:layout_margin="5dp"
        android:id="@+id/recyclerview_tasks" />

</RelativeLayout>