<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReadingData">

    <ProgressBar
        android:id="@+id/progress_start"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status"
            android:fontFamily="@font/arial"
            android:textColor="?android:textColorPrimary"
            android:layout_margin="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/actual_status"
            android:fontFamily="@font/arial"
            android:textColor="?android:textColorPrimary"
            android:layout_margin="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/battery"
            android:textColor="?android:textColorPrimary"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/arial"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="70dp"/>

        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/battery_level"
            android:layout_marginLeft="8dp"
            android:textColor="?android:textColorPrimary"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/arial"
            android:layout_marginRight="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/progress_layout"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="30dp"
            android:layout_gravity="center">

            <!--progress bar implementation-->
            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circular_shape"
                android:indeterminate="false"
                android:progressDrawable="@drawable/circular_progress_bar"
                android:textAlignment="center" />

            <!--Text implementation in center of the progress bar-->
            <TextView
                android:id="@+id/progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="---"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/start_reading"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/filled_bg_circle"
                android:fontFamily="@font/arial"
                android:layout_marginStart="140dp"
                android:text="@string/start"
                android:textSize="14sp"
                android:textStyle="bold" />
<!--                android:backgroundTint="#C58917"/>-->
<!--                android:background="@drawable/filled_bg_circle" />-->

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/stop"
                android:id="@+id/stop_reading"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:fontFamily="@font/arial"
                android:layout_marginStart="140dp"
                android:visibility="gone"
                android:background="@drawable/filled_bg_circle" 
                android:drawableTint="#C58917"/>
<!--                android:backgroundTint="#C58917"/>-->
<!--                android:background="@drawable/filled_bg_circle" />-->

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/arial"
            android:text="@string/systolic"
            android:textColor="?android:textColorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/systalic_val"
            android:textColor="?android:textColorPrimary"
            android:fontFamily="@font/arial"
            android:layout_margin="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:textColorPrimary"
            android:text="@string/diastolic"
            android:fontFamily="@font/arial"
            android:layout_margin="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dystalic_val"
            android:textColor="?android:textColorPrimary"
            android:fontFamily="@font/arial"
            android:layout_margin="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/heart_rate"
            android:fontFamily="@font/arial"
            android:textColor="?android:textColorPrimary"
            android:layout_margin="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rate_val"
            android:fontFamily="@font/arial"
            android:textColor="?android:textColorPrimary"
            android:layout_margin="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map"
            android:fontFamily="@font/arial"
            android:textColor="?android:textColorPrimary"
            android:layout_margin="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/range_val"
            android:textColor="?android:textColorPrimary"
            android:fontFamily="@font/arial"
            android:layout_margin="8dp"/>

    </LinearLayout>

</LinearLayout>